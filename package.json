{
  "name": "solstash",
  "version": "1.0.0",
  "author": "dperdic",
  "description": "Solstash is a simple CLI wallet designed to interact with Solana.",
  "module": "dist/cli.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf ./dist",
    "reset": "rimraf ./node_modules && bun i",
    "make": "bun clean && bun build ./src/cli.ts --minify --splitting --outdir=dist --outfile=cli.js --target=node"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/bun": "latest",
    "@solana/web3.js": "^1.95.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1"
  },
  "devDependencies": {
    "rimraf": "^6.0.1"
  },
  "bin": {
    "solstash": "dist/cli.js"
  }
}